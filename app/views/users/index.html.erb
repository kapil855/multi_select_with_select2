<p id="notice"><%= notice %></p>

<h1 class="text-center">Users</h1>

<table class="table table-boarder">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Course</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.course.join(',') %></td>
        <td>
          <div class="dropdown show">
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Actions
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <%= link_to 'Show', user, data: {turbolinks: false}, class: ' dropdown-item'%>
              <%= link_to 'Edit', edit_user_path(user), data: {turbolinks: false}, class: 'dropdown-item' %>
              <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, data: {turbolinks: false}, class: 'dropdown-item' %>
            </div>
          </div>
        </td>  
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New User', new_user_path, data: {turbolinks: false}, class: 'btn btn-primary btn-lg' %>
